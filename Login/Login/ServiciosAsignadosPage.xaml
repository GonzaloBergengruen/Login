<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.ServiciosAsignadosPage"
             Title="Servicios Asignados"
             Shell.NavBarIsVisible="False">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Servicios Asignados" FontSize="24" HorizontalOptions="Center"/>

        <CollectionView ItemsSource="{Binding Servicios}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Margin="5" Padding="10" HorizontalOptions="FillAndExpand">
                        <StackLayout>
                            <Label Text="{Binding Nombre}" FontSize="18" HorizontalOptions="StartAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnServicioTapped" CommandParameter="{Binding .}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </Frame>    
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label/>

        <Button Text="Volver" Clicked="OnVolverClicked"/>
    </StackLayout>

</ContentPage>