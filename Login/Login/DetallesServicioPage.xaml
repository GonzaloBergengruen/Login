<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.DetallesServicioPage"
             Title="DetallesServicioPage"
             Shell.NavBarIsVisible="False">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="{Binding Nombre}" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="{Binding Detalle}" FontSize="18" HorizontalOptions="Start"/>
        <Label/>

        <Button Text="Rechazar servicio" TextColor="White" BackgroundColor="Red" 
                Clicked="OnRechazarServicioClicked"/>

        <Button Text="Volver" Clicked="OnVolverClicked"/>
    </StackLayout>
    
</ContentPage>